@model Web_QLDiemSV.Models.TaiKhoan

@{
    ViewData["Title"] = "Trang đăng nhập";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Mã sinh viên</label>
                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        
                        @Html.TextBoxFor(m => m.MaSinhVien, "", new { @class = "form-control", @placeholder = "Mã sinh viên" })

                    </div>
                    <br />
                    <div class="form-group">
                        <label>Mật khẩu</label>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
